{# Plantilla Jinja2 para el archivo 'omega' de OpenFOAM #}

dimensions      [0 0 -1 0 0 0 0];

internalField   uniform {{internalField}};

boundaryField
{
    {# Itera sobre la lista de condiciones de borde pasadas desde Python #}
    {% for patch in boundaryField %}
    {{ patch.patchName }}
    {
        type            {{ patch.type }};
        
        {# Itera sobre todos los par√°metros del patch y los escribe #}
        {% for key, value in patch.items() %}
        {% if key == 'kn'%}
        {{ key }}           {{ value }};
        {% else %}
        {% if key not in ['patchName', 'type'] %}
        {% if value is mapping %}
        {{ key }}           uniform ({{ value.x }} {{ value.y }} {{ value.z }});
        {% else %}
        {{ key }}           uniform {{ value }};
        {% endif %}
        {% endif %}
        {% endif %}
        {% endfor %}
    }
    {% endfor %}
    defaultFaces
    {
        type            empty;
    }

}
